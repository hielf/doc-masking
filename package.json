{
  "name": "doc-masking",
  "version": "1.0.0",
  "main": "main.js",
  "description": "A simple desktop app that converts text files to uppercase",
  "author": "hielf",
  "license": "ISC",
  "homepage": "https://github.com/hielf/doc-masking",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "dist": "npm run build",
    "test:js": "jest --runInBand",
    "test:py": "pytest -q",
    "test": "npm run test:js && npm run test:py"
  },
  "keywords": ["electron", "text-processing", "desktop-app"],
  "dependencies": {},
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.hielf.doc-masking",
    "productName": "Doc Masking",
    "icon": "build/icon.ico",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "compression": "maximum",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "python_backend/**/*",
      "example/sample.txt"
    ],
    "extraFiles": [
      {
        "from": "python_backend",
        "to": "python_backend"
      }
    ],
    "extraResources": [
      {
        "from": "python_backend",
        "to": "python_backend"
      }
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": ["x64"]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "electronLanguages": ["en"],
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Doc Masking"
    },
    "portable": {
      "artifactName": "Doc Masking Portable.exe"
    }
  }
}
